mixin mainContent
    main.mdl-layout__content.mdl-color--grey-100
        button#elf-sign-in.mdl-button.mdl-js-button.mdl-button--raised(disabled='')
            | Sign in with Google

        p#load Firebase SDK Loadingâ€¦

        p
            | Firebase sign-in status:
            span#elf-sign-in-status Unknown

        <pre><code id="elf-user">null</code></pre>
        <pre><code id="elf-details">null</code></pre>
        <pre><code id="elf-oauthtoken">null</code></pre>
        img#elfPhoto(src='favicon.png', alt='', width="10%", min-width="120px")

mixin userData
    .div
        p#userName
        p#userEmail
        p#userPhotoUrl
        p#userId
        p#userImg

mixin baseButtons
    .div
        button.mdl-button.mdl-js-button.mdl-button--raised#elfDatabasePush elfDatabasePush
        button.mdl-button.mdl-js-button.mdl-button--raised#elfDatabaseGet elfDatabaseGet
        button.mdl-button.mdl-js-button.mdl-button--raised#elfDatabaseGetAllQux elfDatabaseGetAllQux
    .div
        button.mdl-button.mdl-js-button.mdl-button--raised#elfShowCurrentUser elfGetCurrentUser
        button.mdl-button.mdl-js-button.mdl-button--raised#elfInput elfInput
        button.mdl-button.mdl-js-button.mdl-button--raised#elfInsertFromFile elfInsertFromFile
    .div
        button.mdl-button.mdl-js-button.mdl-button--raised#elfUpdatePresident elfUpdatePresident
        button.mdl-button.mdl-js-button.mdl-button--raised#elfPushPresident elfPushPresident
        button.mdl-button.mdl-js-button.mdl-button--raised#elfGetPresidents elfGetPresidents

mixin serverButtons
    .div
        button.mdl-button.mdl-js-button.mdl-button--raised#serverFetch Server Fetch

mixin userInput
    input#elfFirstName(type='text', name='elfFirstName', default='foo')
    input#elfLastName(type='text', name='elfLastName', default='bar')
    ul#userInputList